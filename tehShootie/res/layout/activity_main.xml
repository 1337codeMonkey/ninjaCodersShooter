<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tsmainback"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity" >

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2" />

	<ImageView 
		android:id="@+id/title"
        android:layout_width="fill_parent"
        android:scaleType="center"
        android:layout_height="70dp"
     	android:background="@drawable/title_logo"
	    />
	
    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2" />

    <Button
        android:id="@+id/arcade"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:background="@drawable/button_arcade"
        android:onClick="startArcade" />

    <Button
        android:id="@+id/highscore"
        android:layout_width="260dp"
        android:layout_height="60dp"
		android:background="@drawable/button_highscore"
        android:onClick="getLeaderboard"
         />
    
        <Button
        android:id="@+id/social"
        android:layout_width="260dp"
        android:layout_height="60dp"
		android:background="@drawable/button_social"
        android:onClick="login"
         />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3" />

</LinearLayout>